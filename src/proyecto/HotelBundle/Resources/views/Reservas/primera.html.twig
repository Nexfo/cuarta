{% extends 'proyectoHotelBundle::layout.html.twig' %}

{% block titulo %}Reserva: información básica{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('bundles/proyectohotel/css/jquery-ui.css') }}">
	{{ parent() }}
	<link rel="stylesheet" href="{{ asset('bundles/proyectohotel/css/reservas/estilo_reserva_base.css') }}" />
	<link rel="stylesheet" href="{{ asset('bundles/proyectohotel/css/reservas/estilo_reserva_primera.css') }}" />
{% endblock %}

{% block cabecera %}
	<div id="cabecera">
		<div id="slogans">
			<div id="c_s_1">
				<div id="s_1">Reservas</div>
				<div id="bg_s_1"> </div>
			</div>
		</div>
	</div>
{% endblock %}

{% block banner_reserva %}{% endblock %}

{% form_theme form 'proyectoHotelBundle:Form:form_reserva_type.html.twig' %}
{% block contenido %}
	<div id="proceso_reserva">
		<ul>
			<li class="activo"><div><span>1</span></div>Información básica</li>
			<li><div><span>2</span></div>Seleccionar habitación</li>
			<li><div><span>3</span></div>Información de cliente</li>
			<li><div><span>4</span></div>Finalizar</li>
		</ul>
	</div>
	<div id="info_reserva">
		<h1>Información básica</h1>
		<p>
			Debes finalizar el proceso de reserva en menos de 15 minutos. 
			Los niños de más de 12 años computan como un adulto más. 
			Para cualquier duda, <a href="{{ path('contacto') }}">contacta con nosotros</a>.
		</p>
	</div>
	
	<div id="form_reserva">
		{% if not form.vars.valid or error != "" %}
			<div id="errores">
				{{ form_errors(form.fecha_entrada) }}
				{{ form_errors(form.fecha_salida) }}
				{{ form_errors(form.tipo_habitacion) }}
				{{ form_errors(form.adultos) }}
				{{ form_errors(form.ninios) }}
				{{ error }}
			</div>
		{% endif %}
		{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
			<div class="fila">
				<div>
					<span>{{ form_label(form.fecha_entrada) }}</span><br/>
					{{ form_widget(form.fecha_entrada) }}
				</div>
				
				<div>
					<span>{{ form_label(form.fecha_salida) }}</span><br/>
					{{ form_widget(form.fecha_salida) }}
				</div>
			</div>

			<div class="fila">
				<div id="habitacion">
					<span>{{ form_label(form.tipo_habitacion) }}</span><br/>
					{{ form_widget(form.tipo_habitacion) }}
				</div>
				
				<div id="adultos">
					<span>{{ form_label(form.adultos) }}</span><br/>
					{{ form_widget(form.adultos) }}
				</div>
				
				<div id="ninios">
					<span>{{ form_label(form.ninios) }}</span><br/>
					{{ form_widget(form.ninios) }}
				</div>
			</div>
			
			<div id="boton">
				{{ form_widget(form.reservar) }}
			</div>
		{{ form_end(form) }}
	</div>
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('bundles/proyectohotel/js/jquery-1.11.0.min.js') }}"></script>
	<script src="{{ asset('bundles/proyectohotel/js/jquery-ui.js') }}"></script>
	<script src="{{ asset('bundles/proyectohotel/js/jquery.ui.datepicker-es.js') }}"></script>
	<script>
		global = {
			locale: '{{ app.request.locale }}'
		}
	</script>
	<script src="{{ asset('bundles/proyectohotel/js/file.js') }}"></script>
{% endblock %}